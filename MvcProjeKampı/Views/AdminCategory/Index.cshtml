@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3>Admin üzerinden Kategori Tablosu</h3>
<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.CategoryID</th>
    <td>@item.CategoryName</td>
    <td>@item.CategoryDescription</td>
    <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
    <td><a href="/AdminCategory/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
    <td><button class="btn btn-primary">Başlıklar</button></td>

</tr>

    }

</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori</a>
